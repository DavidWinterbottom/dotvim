#Installation:
  cd ~
	git clone git://github.com/DavidWinterbottom/dotvim.git ~/.vim

#Create symlinks
	ln -s ~/.vim/vimrc ~/.vimrc
	ln -s ~/.vim/gvimrc ~/.gvimrc

#Update submodules
  cd ~/.vim
  git submodule init
  git submodule update


#On Windows
 cd %HOMEPATH%
 git clone git://github.com/DavidWinterbottom/dotvim.git vimfiles

#Update submodules
  cd vimfiles
  git submodule init
  git submodule update
